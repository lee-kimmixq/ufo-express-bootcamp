<% sightings.forEach((sighting, index) => { %>
  <% if (show === "all") { show = sightings.length } %>
  <% if (index >= 0 + ((page-1) * show) && index < (page * show)) { %>
  <div class="card" style="margin: 5px;">
    <div class="card-body">
      <div class="row">
        <div class="col-11">
          <div class="card-title">
            <h4 style="margin-bottom: 0px;"><%=sighting.city%>, <%=sighting.state%></h4>
          </div>
          <h6 class="card-subtitle mb-2 text-muted" style="margin: 0px;">
            <%=sighting.date_time%> &nbsp
            <span class="btn btn-sm btn-outline-warning"><%=sighting.shape%></span>
          </h6>
        </div>
        <div class="col-1">
            <a href="/favourites/<%=sighting.index%>">
              <button class="btn btn-icon">
                <% if (sighting.isFav) { %>
                  <i class="fas fa-lg fa-star"></i>
                <% } else { %>
                  <i class="far fa-lg fa-star"></i>
                <% } %>
              </button>
            </a>
        </div>
      </div>
      <p class="card-text text-secondary"><%=sighting.summary%>...</p>
      <a href="/sightings/<%=sighting.index%>" class="btn btn-primary btn-sm"
        >View</a
      >
      <a
        href="/sightings/<%=sighting.index%>/edit"
        class="btn btn-secondary btn-sm"
        >Edit</a
      >
      <form action="/sightings/<%=sighting.index%>?_method=DELETE" method="POST">
        <input type="submit" class="btn btn-danger btn-sm" value="Delete" />
      </form>
    </div>
  </div>
  <% } %>
  <% }) %>